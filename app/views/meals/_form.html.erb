<%= form_for(@meal) do |f| %>
  <%= f.error_messages %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
    <%= f.text_field :name %>
  </div>
  </div>
  <div class="clearfix">
    <%= f.label :date %>
    <div class="input">
    <%= f.date_select :date %>
  </div>
  </div>
  <div class="clearfix">
    <%= f.label :time %>
    <div class="input">
    <%= f.time_select :time %>
  </div>
  </div>
  <div class="clearfix">
    <%= f.label :dayOn %>
    <div class="input">
    <%= f.check_box :dayOn %>
  </div>
  </div>
  <div class="actions">
    <%= f.submit "Done", :class => "btn primary" %>
  </div>
<% end %>
