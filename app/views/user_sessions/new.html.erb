<% title "Log in" %>
<div class="page-header">
  <h1>Login</h1>
</div>

<%= form_for @user_session do |f| %>
  <fieldset>
  <%= f.error_messages %>
  <div class="clearfix">
    <%= f.label :username %>
    <div class="input">
      <%= f.text_field :username, :class => "xlarge" %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
    <%= f.text_field :password, :class => "xlarge" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Log in", :class => "btn primary" %>
  </div>
  </fieldset>
<% end %>
<legend>Don't have an account? <%= link_to "Sign up!", signup_path %></legend>
